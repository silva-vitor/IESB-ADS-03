        res.status(400).json("São obrigatorio nome, idade,email,telefone!")
    }else{
        const pessoa={ 
        id:Math.round(Math.random()* 1000),
        nome: dados.nome,
        idade: dados.idade,
        email: dados.email,
        telefone: dados.telefone
    }
    listaPessoas.push(pessoa)
    res.status(201).json("Pessoa cadastrada com sucssso")
    }
})
// altera pessoa
